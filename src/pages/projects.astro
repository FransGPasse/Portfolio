---
import Layout from "../layouts/Layout.astro";
import SpinningLogo from "../components/SpinningLogo.astro";
import Card from "../components/Card.astro";
---

<Layout title="About me">
  <section class="page-wrapper">
    <Card
      img="../assets/project_images/AI-storybook.jpg"
      title="AI storybook"
      body="A project about bla bla..."
      href="https://ai-storybook.netlify.app/"
    />
  </section>
  <div class="logo-wrapper">
    <SpinningLogo id="logo" />
  </div>
</Layout>

<style>
  .page-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    min-height: var(--h-pad);
  }

  .logo-wrapper {
    position: fixed;
    right: -30px;
    bottom: -50px;
    color: rgba(255, 255, 255, 0.375);

    z-index: -1;
  }
</style>
