---
export interface Props {
  title: string;
}

const { title } = Astro.props;

import "../styles/fonts.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="./assets/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
  }

  :root,
  :root::before,
  :root::after {
    font: inherit;

    --clr-bg: linear-gradient(
      220deg,
      rgb(255, 148, 90) 0%,
      rgb(160, 101, 255) 100%
    );
    --clr-secondary: black;
    --clr-accent: darkorange;

    --font-main: "Poppins", sans-serif;
    --font-mono: "cousine", monospace;

    --padding: 12px;
    --h-pad: calc(100vh - (var(--padding) * 2));
    --h-pad: calc(100dvh - (var(--padding) * 2));

    scroll-behavior: smooth;
  }

  body {
    background: var(--clr-bg);
    font-family: var(--font-main);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    /* Removes scrollbar but keeps functionality in Edge, Firefox... */
    /*     scrollbar-width: none; */

    padding: var(--padding);
  }

  /* ... and Chrome, Safari and Opera */
  /* 
  body::-webkit-scrollbar {
    display: none;
    -ms-overflow-style: none;
  } */

  ::selection {
    color: var(--clr-accent);
    background: aquamarine;
  }
</style>
